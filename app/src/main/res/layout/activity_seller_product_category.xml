<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sellers.SellerProductsCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Add New Product"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/home_appliances"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/home_appliances"

            />

        <ImageView
            android:id="@+id/laptops"
            android:layout_width="111dp"
            android:layout_height="95dp"
            android:src="@drawable/laptops" />

        <ImageView
            android:id="@+id/televisions"
            android:layout_width="109dp"
            android:layout_height="match_parent"
            android:src="@drawable/televisions" />

        <ImageView
            android:id="@+id/phones"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:src="@drawable/phones" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/tablets"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/tablets"

            />

        <ImageView
            android:id="@+id/smart_watches"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/smart_watches" />

        <ImageView
            android:id="@+id/head_phones"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/head_phones" />

        <ImageView
            android:id="@+id/gaming"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/gaming"
            android:layout_marginStart="16dp"
            />




    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/desktop_computers"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/desktop_computers"

            />

        <ImageView
            android:id="@+id/sound_systems"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/sound_systems" />

        <ImageView
            android:id="@+id/networking_devices"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/networking_devices" />

        <ImageView
            android:id="@+id/printers_and_scanners"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/printers_and_scanners"
            android:layout_marginStart="16dp"
            />




    </LinearLayout>




</RelativeLayout>